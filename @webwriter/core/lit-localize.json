{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["de"],
  "plannedLocales": ["zh", "es", "fr", "ar", "ru", "pt"],
  "tsConfig": "./tsconfig.json",

  "output": {
    "mode": "runtime",
    "outputDir": "./src/generated/locales"
  },

  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  } 
}